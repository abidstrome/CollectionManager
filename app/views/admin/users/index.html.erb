<h1>Manage Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.blocked? ? 'Blocked' : 'Active' %></td>
        <td>
          <% if user.blocked? %>
            <%= link_to 'Unblock', unblock_admin_user_path(user), method: :patch %>
          <% else %>
            <%= link_to 'Block', block_admin_user_path(user), method: :patch %>
          <% end %>
          <% if user.admin? %>
            <%= link_to 'Remove Admin', remove_admin_admin_user_path(user), method: :patch %>
          <% else %>
            <%= link_to 'Make Admin', make_admin_admin_user_path(user), method: :patch %>
          <% end %>
          <%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
