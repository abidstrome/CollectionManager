<% if user_signed_in? %>
  <%= form_with(model: [ @item, @item.comments.build ], local: true) do |form| %>
    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body %>
    </div>
    <div class="actions">
      <%= form.submit 'Add Comment', class: 'btn btn-primary' %>
    </div>
  <% end %>
<% else %>
  <p>You must be logged in to add a comment.</p>
<% end %>
