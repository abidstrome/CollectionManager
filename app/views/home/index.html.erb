<h1>Welcome to Collection Manager</h1>

<h2>Latest Items</h2>
<ul>
  <% @latest_items.each do |item| %>
    <li><%= link_to item.name, collection_item_path(item.collection, item) %></li>
  <% end %>
</ul>

<h2>Top Collections</h2>
<ul>
  <% @top_collections.each do |collection| %>
    <li><%= link_to collection.name, collection_path(collection) %></li>
  <% end %>
</ul>

