<h1>Items in <%= @collection.name %> </h1>
<% if user_signed_in? %>
    <%= link_to 'New Item', new_collection_item_path(@collection), class: 'btn btn-primary'%>
<% end %>

<ul>
    <% @items.each do |item| %>
        <li>
            <%= link_to item.name, collection_item_path(@collection, item) %>
            <% if user_signed_in? && (@collection.user == current_user || current_user.admin?) %>
                <%= link_to 'Edit', edit_collection_item_path(@collection, item), class: 'btn btn-secondary'%>
                <%= link_to 'Delete', collection_item_path(@collection, item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'%>
            <% end %>
        </li>
        
    <% end %>
</ul>

<%= link_to 'Back to Collection', collection_path(@collection)%>